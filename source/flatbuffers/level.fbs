namespace MFT;

struct Vec3 {
  x:float;
  y:float;
  z:float;
}

struct Mat4 {
  m11: float;
  m12: float;
  m13: float;
  m14: float;
  m21: float;
  m22: float;
  m23: float;
  m24: float;
  m31: float;
  m32: float;
  m33: float;
  m34: float;
  m41: float;
  m42: float;
  m43: float;
  m44: float;
