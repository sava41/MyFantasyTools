struct Triangle {
  vert1: uint16;
  vert2: uint16;
  vert3: uint16;
  camera_id: uint16;
  material_id: uint16;
}

table Camera {
  name: string;
  id: uint16;
  world_transform: Mat4;
  aspect: float;
  resX: uint16;
  resY: uint16;
